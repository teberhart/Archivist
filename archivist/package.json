    "next": "16.1.6",
    "next-auth": "5.0.0-beta.30",
    "pg": "^8.18.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "prisma": {
    "seed": "node prisma/seed.cjs"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/vite-dev-server": "^5.0.1",
    "@cypress/webpack-dev-server": "^3.9.0",
    "@tailwindcss/postcss": "^4",
