{
  "name": "archivist",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm prisma generate && pnpm prisma:link && next build",
    "start": "next start",
    "lint": "eslint",
    "cypress:open": "cypress open",
    "cypress:open:ct": "cypress open --component",
